easyblock = 'Toolchain'

name = 'nvompic'
version = '2021b'
versionsuffix = '-CUDA-%(cudaver)s'

homepage = '(none)'
description = 'NVHPC based compiler toolchain, including OpenMPI for MPI support.'

toolchain = SYSTEM

local_compiler = ('NVHPC', '21.9-CUDA-%(cudaver)s')

dependencies = [
    local_compiler,
    ('OpenMPI', '4.1.1', '', local_compiler),
    ('CUDA', '11.4.1', '', True),
]

moduleclass = 'toolchain'
